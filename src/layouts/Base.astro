---
import "../styles/global.css";
import Navbar from '../components/Navbar.astro';
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from '@vercel/analytics/astro';
import "@splidejs/splide/dist/css/splide.min.css";

import { getLocale } from '../utils/getLocale';
// Required for dynamic routes
export async function getStaticPaths() {
  return ['en', 'ko', 'zh'].map(lang => ({
    params: { lang }
  }));
}

// Get locale from URL param
const { lang } = Astro.params;
const locale = getLocale(lang);

const { title, description, url, ogImage, keywords } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href={url} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />

    <!-- Async flatpickr and splide styles -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"></noscript>

    <link rel="preload" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/css/splide.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/css/splide.min.css"></noscript>

    <!-- Defer Splide JS -->
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/js/splide.min.js" defer></script>

    <SpeedInsights />
    <Analytics />
  </head>
  <body class="font-body text-xl text-gray-700">
    <Navbar />

    <main>
      <slot />
    </main>

    <footer class="bg-[#FAF7EF] text-black pt-20 pb-10 text-sm mt-34">
      <!-- Logo -->
      <div class="container mx-auto px-4 text-center">
        <img src="https://www.kamandaluresort.com/images/kamandalu-logo.png" alt="Kamandalu Logo" class="w-52 mx-auto mb-20" />
      </div>
    
      <!-- Newsletter + Links -->
      <div class="w-full px-4 xl:px-20 grid grid-cols-1 md:grid-cols-3 gap-12 text-left mt-10">
        <!-- Newsletter -->
        <div>
          <h3 class="uppercase tracking-widest font-title text-md 2xl:text-lg mb-6">Get Notified On Our Offers</h3>
          <form class="flex flex-col gap-4">
        <input type="text" placeholder="Your Name*" class="border-b border-black bg-transparent focus:outline-none py-2 w-full max-w-xs md:max-w-62 text-base" />
        <input type="email" placeholder="Your Email*" class="border-b border-black bg-transparent focus:outline-none py-2 w-full max-w-xs md:max-w-62 text-base" />
        <button aria-label="Submit Newsletter Form" type="submit" class="uppercase mt-4 tracking-widest text-left border-b border-black w-fit text-base">Submit</button>
          </form>
        </div>
        
        <!-- Explore + Connect -->
        <div class="md:col-span-2 grid grid-cols-3 gap-12">
          <!-- Explore (takes up 2 columns) -->
          <div class="col-span-2">
        <h3 class="uppercase tracking-widest font-title text-md 2xl:text-lg mb-4">Explore</h3>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-2 lg:gap-4">
            <ul class="space-y-2 col-span-1 max-w-[120px]">
            <li><a class="text-lg" href={`/${locale}/offers`}>Offers</a></li>
            <li><a class="text-lg" href={`/${locale}/villas`}>Our Villa</a></li>
            <li><a class="text-lg" href={`/${locale}/spa-wellness`}>Spa & Wellness</a></li>
            <li><a class="text-lg" href={`/${locale}/dining`}>Dining</a></li>
            </ul>
            <ul class="space-y-2 col-span-1 sm:-ml-8 lg:-ml-2">
            <li><a class="text-lg" href={`/${locale}/experiences`}>Unique Experiences</a></li>
            <li><a class="text-lg" href={`/${locale}/wedding-events`}>Wedding & Events</a></li>
            <li><a class="text-lg" href={`/${locale}/our-story`}>Our Story</a></li>
            <li><a class="text-lg" href={`/${locale}/gallery`}>Gallery</a></li>
            </ul>
            <ul class="space-y-2 col-span-1">
            <li><a class="text-lg" href={`/${locale}/services-facilities`}>Facilities</a></li>
            <li><a class="text-lg" href={`/${locale}/blog`}>Blog</a></li>
            <li><a class="text-lg" href={`/${locale}/videos`}>Videos</a></li>
            <li><a class="text-lg" href={`/${locale}/contact-us`}>Contact Us</a></li>
            </ul>
        </div>
          </div>
          
          <!-- Connect (smaller, 1 column) -->
          <div class="col-span-1 max-w-xs">
        <h3 class="uppercase tracking-widest font-title text-md 2xl:text-lg mb-4">Connect</h3>
        <ul class="space-y-2">
          <li><a class="text-lg" href="https://wa.me/+628113984566" target="_blank">Whatsapp</a></li>
          <li><a class="text-lg" href="https://www.facebook.com/kamandaluresort" target="_blank">Facebook</a></li>
          <li><a class="text-lg" href="https://www.instagram.com/kamandalu" target="_blank">Instagram</a></li>
          <li><a class="text-lg" href="https://www.tiktok.com/@kamandaluubud" target="_blank">TikTok</a></li>
        </ul>
          </div>
        </div>
      </div>
    
      <!-- Bottom -->
      <div class="mx-auto px-4 xl:px-20 mt-12 grid grid-cols-1 xl:grid-cols-3 items-center gap-4 text-xs">
        <!-- Left: Terms & Privacy -->
        <div class="flex gap-4 justify-center md:justify-start">
          <a class="text-lg" href={`/${locale}/terms-and-conditions`}>Terms</a>
          <a class="text-lg" href={`/${locale}/privacy-policy`}>Privacy</a>
        </div>
        <!-- Center: Copyright -->
        <div class="flex justify-center">
          <p class="text-center text-lg">&copy; 2025 Kamandalu Ubud. All Rights Reserved</p>
        </div>
        <!-- Right: Blank space -->
        <div></div>
      </div>
    </footer>
  </body>
</html>
