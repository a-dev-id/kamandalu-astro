---
// Import dependencies and components
import Layout from '../../../layouts/Base.astro';
import client from '../../../lib/sanityClient';
import { getLocale } from '../../../utils/getLocale';
import OptimizedImage from '../../../components/OptimizedImage.astro';
import { toHTML } from '@portabletext/to-html';

// Get params and locale
const { lang, slug } = Astro.params;
const locale = getLocale(lang);
const safeArray = arr => Array.isArray(arr) ? arr : [];

// Fetch wedding venue data from Sanity
const wedding = await client.fetch(`*[_type == "weddingVenue" && slug.current == $slug][0]{
  title,
  excerpt,
  description,
  mainImage { asset->{url} },
  mainImageAlt,
  metaTitle,
  metaDescription,
  metaKeywords,
  order,
  "detail": detail[$locale],
  "contact": contact[$locale],
  packages[]{
      title,
      images[]{asset->{url}},
      price,
      description,
      inclusion
    },
}`, { slug, locale });

// Generate static paths for all languages and slugs
export async function getStaticPaths() {
  const slugs = await client.fetch(`*[_type == "weddingVenue" && defined(slug.current)]{ "slug": slug.current }`);
  const languages = ['en', 'ko', 'zh'];
  return languages.flatMap(lang => slugs.map(wedding => ({ params: { lang, slug: wedding.slug } })));
}

// Convert detail and menu fields to HTML
const detailHTML = toHTML(safeArray(wedding.detail), {
  components: {
    list: ({ children, value }) => (value?.listItem === 'bullet' || value?.style === 'normal'
      ? `<ul class="list-disc ml-6 space-y-2">${children}</ul>`
      : `<ol class="list-decimal ml-6 space-y-2">${children}</ol>`),
    listItem: ({ children }) => `<li>${children}</li>`,
  }
});

const menuHTML = toHTML(safeArray(wedding.menu), {
  components: {
    list: ({ children, value }) => (value?.listItem === 'bullet' || value?.style === 'normal'
      ? `<ul class="list-disc ml-6 space-y-2">${children}</ul>`
      : `<ol class="list-decimal ml-6 space-y-2">${children}</ol>`),
    listItem: ({ children }) => `<li>${children}</li>`,
  }
});

// HTML options for block content
const htmlOpts = {
  components: {
    block: ({ children }) => `<p>${children.replace(/\n/g, '<br>')}</p>`,
    list: ({ children, value }) => {
      const type = value?.listItem === 'bullet' || value?.style === 'normal' ? 'bullet' : 'number';
      return type === 'bullet'
        ? `<ul class="list-disc ml-6 space-y-2">${children}</ul>`
        : `<ol class="list-decimal ml-6 space-y-2">${children}</ol>`;
    },
    listItem: ({ children }) => `<li>${children}</li>`,
  }
};

// Convert contact field to HTML
const contactHTML = toHTML(safeArray(wedding.contact), htmlOpts);

// Prepare other fields and meta data
const htmlFields = { desc: toHTML(safeArray(wedding?.description?.[locale])) };
const packages = safeArray(wedding.packages);
const title = wedding?.metaTitle?.[locale] ?? '';
const description = wedding?.metaDescription?.[locale] ?? '';
const baseUrl = new URL(Astro.request.url);
const url = baseUrl.href;
const ogImage = wedding.mainImage?.asset?.url ?? '';
const keywords = wedding.metaKeywords?.[locale] ?? '';
---

<Layout {title} {description} {url} {ogImage} {keywords}>
  {/* Hero section with main image */}
  <section class="relative w-full h-[50vh] md:h-[60vh] lg:h-[75vh] overflow-hidden">
    <OptimizedImage
      src={wedding.mainImage.asset.url}
      alt={wedding.mainImageAlt?.[locale] ?? ''}
      width={1600}
      height={900}
      quality={75}
      className="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/25 z-20"></div>
  </section>

  {/* Title and description section */}
  <section class="container mx-auto px-4 xl:px-10 2xl:px-0 py-16 md:py-24">
    <div class="text-center px-2 sm:px-6 md:px-8 mx-auto">
      <h1 class="font-title text-3xl sm:text-4xl md:text-5xl uppercase mb-4 md:mb-6 tracking-widest font-light">
        {wedding?.title?.[locale] ?? ''}
      </h1>
      <p class="text-lg">
        {wedding?.description?.[locale] ?? ''}
      </p>
    </div>
  </section>

  {/* Details and contact/reservation section */}
  <section class="container mx-auto px-4 xl:px-10 2xl:px-0 pb-16 md:pb-24">
    <div class="flex flex-col lg:flex-row justify-between gap-12">
      <div class="lg:w-3/5">
        <h3 class="font-title text-xl md:text-2xl uppercase mb-6">Details</h3>
        <div class="text-lg max-w-none" set:html={detailHTML}></div>
      </div>
      <div class="lg:w-2/5 flex flex-col items-end">
        <div>
          <h3 class="font-title text-xl md:text-2xl uppercase mb-6">Reserve your wedding<br>or Event</h3>
          <div class="text-lg mb-6" set:html={contactHTML}></div>
          <a
            href={`https://www.book-secure.com/index.php?s=results&property=idbal31692&locale=${locale}_GB&stid=986w12cwy`}
            class="inline-block px-4 py-3 md:px-4 md:py-2 text-xs font-title tracking-widest border bg-[#916B2C] text-white border-transparent hover:bg-white hover:text-black hover:border-black transition-colors duration-300 text-center"
            target="_blank"
            rel="noopener noreferrer"
          >
            BOOK NOW
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Packages section with accordion */}
  {packages.length > 0 && (
    <section class="container mx-auto px-4 xl:px-10 2xl:px-0 pb-12">
      <h3 class="font-title text-xl md:text-2xl uppercase mb-6">Package</h3>
      {packages.map((pkg, i) => {
        const pkgDescription = toHTML(safeArray(pkg.description?.[locale]), htmlOpts);
        const pkgInclusion = toHTML(safeArray(pkg.inclusion?.[locale]), htmlOpts);

        return (
          <div class="border-t border-b border-gray-300 mb-4" key={`package-${i}`}>
            {/* Accordion button for package */}
            <button
              type="button"
              class="w-full flex justify-between items-center py-4 text-left text-lg uppercase toggle-btn"
              data-target={`accordion-${i}`}
              aria-expanded="false"
              aria-controls={`accordion-${i}`}
            >
              <div>
                <div class="text-sm text-gray-500 uppercase tracking-wide">
                  {pkg.price?.[locale] ?? ''}
                </div>
                <span class="font-title">
                  {pkg.title?.[locale] ?? `Package ${i + 1}`}
                </span>
              </div>

              <div class="flex items-center gap-4">
                {/* Accordion icon */}
                <svg class="w-5 h-5 transition-transform duration-300" data-icon data-target={`accordion-${i}`} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
                {/* Book now button for package */}
                <a
                  href={`https://www.book-secure.com/index.php?s=results&property=idbal31692&locale=${locale}_GB&stid=986w12cwy`}
                  class="inline-block px-4 py-3 md:px-4 md:py-2 text-xs font-title tracking-widest border hover:bg-[#916B2C] hover:text-white hover:border-transparent bg-white text-black border-black transition-colors duration-300 text-center"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  BOOK NOW
                </a>
              </div>
            </button>

            {/* Accordion panel for package details */}
            <div id={`accordion-${i}`} class="grid grid-cols-1 md:grid-cols-2 gap-6 pb-6 hidden" role="region" aria-labelledby={`accordion-${i}`}>
                <div class="flex flex-col md:flex-row gap-6 items-start">
                {pkg.images && pkg.images.length > 0 && (
                  <div class="md:w-1/3 w-full flex-shrink-0">
                  <OptimizedImage
                    src={pkg.images[0].asset.url}
                    alt={pkg.title?.[locale] ?? ''}
                    width={400}
                    height={300}
                    quality={75}
                    className="w-full h-auto mb-4 md:mb-0"
                  />
                  </div>
                )}
                <div class="md:w-2/3 w-full">
                  <div class="text-lg max-w-none" set:html={pkgDescription}></div>
                </div>
                </div>
              <div class="text-lg max-w-none" set:html={pkgInclusion}></div>
            </div>
          </div>
        );
      })}
    </section>
  )}

  {/* Accordion toggle script */}
  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.toggle-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const targetId = btn.dataset.target;
          const panel = document.getElementById(targetId);
          const icon = document.querySelector(`svg[data-icon][data-target="${targetId}"]`);
          const expanded = btn.getAttribute('aria-expanded') === 'true';
          btn.setAttribute('aria-expanded', String(!expanded));
          panel.classList.toggle('hidden');
          icon.classList.toggle('rotate-180');
        });
      });
    });
  </script>
</Layout>
