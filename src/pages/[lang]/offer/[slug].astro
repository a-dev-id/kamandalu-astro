        showMonths: getMonthsToShow()
      });

      window.addEventListener("resize", () => {
        const fp = document.querySelector("#flatpickr-date")._flatpickr;
        if (fp) {
          const months = getMonthsToShow();
          if (fp.config.showMonths !== months) {
            fp.set("showMonths", months);
          }
        }
      });

