---
// Import dependencies and components
import Layout from '../../../layouts/Base.astro';
import client from '../../../lib/sanityClient';
import { getLocale } from '../../../utils/getLocale';
import OptimizedImage from '../../../components/OptimizedImage.astro';
import { toHTML } from '@portabletext/to-html';

// Get route parameters and locale
const { lang, slug } = Astro.params;
const locale = getLocale(lang);
const safeArray = arr => Array.isArray(arr) ? arr : [];

// Fetch experience data from Sanity CMS
const experience = await client.fetch(`*[_type == "experienceUnique" && slug.current == $slug][0]{
  title,
  excerpt,
  description,
  mainImage { asset->{url} },
  mainImageAlt,
  metaTitle,
  metaDescription,
  metaKeywords,
  order,
  "detail": detail[$locale],
  "menu": menu[$locale],
  "contact": contact[$locale],
}`, { slug, locale });

// Generate static paths for all languages and slugs
export async function getStaticPaths() {
  const slugs = await client.fetch(`*[_type == "experienceUnique" && defined(slug.current)]{ "slug": slug.current }`);
  const languages = ['en', 'ko', 'zh'];
  return languages.flatMap(lang => slugs.map(experience => ({ params: { lang, slug: experience.slug } })));
}

// Convert Portable Text fields to HTML for rendering
const detailHTML = toHTML(safeArray(experience.detail), {
  components: {
    list: ({ children, value }) => (value?.listItem === 'bullet' || value?.style === 'normal'
      ? `<ul class="list-disc ml-6 space-y-2">${children}</ul>`
      : `<ol class="list-decimal ml-6 space-y-2">${children}</ol>`),
    listItem: ({ children }) => `<li>${children}</li>`,
  }
});

const menuHTML = toHTML(safeArray(experience.menu), {
  components: {
    list: ({ children, value }) => (value?.listItem === 'bullet' || value?.style === 'normal'
      ? `<ul class="list-disc ml-6 space-y-2">${children}</ul>`
      : `<ol class="list-decimal ml-6 space-y-2">${children}</ol>`),
    listItem: ({ children }) => `<li>${children}</li>`,
  }
});

const htmlOpts = {
  components: {
    block: ({ children }) => `<p>${children.replace(/\n/g, '<br>')}</p>`,
    list: ({ children, value }) => {
      const type = value?.listItem === 'bullet' || value?.style === 'normal' ? 'bullet' : 'number';
      return type === 'bullet'
        ? `<ul class="list-disc ml-6 space-y-2">${children}</ul>`
        : `<ol class="list-decimal ml-6 space-y-2">${children}</ol>`;
    },
    listItem: ({ children }) => `<li>${children}</li>`,
  }
};

const contactHTML = toHTML(safeArray(experience.contact), htmlOpts);

// Prepare meta tags and Open Graph data
const title = experience?.metaTitle?.[locale] ?? '';
const description = experience?.metaDescription?.[locale] ?? '';
const baseUrl = new URL(Astro.request.url);
const url = baseUrl.href;
const ogImage = experience.mainImage?.asset?.url ?? '';
const keywords = experience.metaKeywords?.[locale] ?? '';
---

<Layout {title} {description} {url} {ogImage} {keywords}>
  {/* Hero section with main image */}
  <section class="relative w-full h-[50vh] md:h-[60vh] lg:h-[75vh] overflow-hidden">
    <OptimizedImage
      src={experience.mainImage.asset.url}
      alt={experience.mainImageAlt?.[locale] ?? ''}
      width={1600}
      height={900}
      quality={75}
      className="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/25 z-20"></div>
  </section>

  {/* Title and description section */}
  <section class="container mx-auto px-4 xl:px-10 2xl:px-0 py-16 md:py-24">
    <div class="text-center px-2 sm:px-6 md:px-8 mx-auto">
      <h1 class="font-title text-3xl sm:text-4xl md:text-5xl uppercase mb-4 md:mb-6 tracking-widest font-light">
        {experience?.title?.[locale] ?? ''}
      </h1>
      <p class="text-lg">
        {experience?.description?.[locale] ?? ''}
      </p>
    </div>
  </section>

  {/* Details and reservation section */}
  <section class="container mx-auto px-4 xl:px-10 2xl:px-0 pb-16 md:pb-24">
    <div class="flex flex-col lg:flex-row justify-between gap-12">
      {/* Experience details */}
      <div class="lg:w-3/5">
        <h3 class="font-title text-xl md:text-2xl uppercase mb-6">Details</h3>
        <div class="text-lg max-w-none" set:html={detailHTML}></div>
      </div>
      {/* Reservation and contact info */}
      <div class="lg:w-2/5 flex flex-col items-end">
        <div>
          <h3 class="font-title text-xl md:text-2xl uppercase mb-6">Reserve your experience</h3>
          <div class="text-lg mb-6" set:html={contactHTML}></div>
          <a
            href={`https://www.book-secure.com/index.php?s=results&property=idbal31692&locale=${locale}_GB&stid=986w12cwy`}
            class="inline-block px-4 py-3 md:px-4 md:py-2 text-xs font-title tracking-widest border bg-[#916B2C] text-white border-transparent hover:bg-white hover:text-black hover:border-black transition-colors duration-300 text-center"
            target="_blank"
            rel="noopener noreferrer"
          >
            BOOK NOW
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Accordion section for more information */}
  {menuHTML.trim()
    ? (
      <section class="container mx-auto px-4 xl:px-10 2xl:px-0 pb-12">
        <div class="border-t border-b border-gray-300">
          <button
            type="button"
            class="w-full flex justify-between items-center py-4 font-title text-left text-lg uppercase toggle-btn"
            data-target="accordion-1"
            aria-expanded="false"
            aria-controls="accordion-1"
          >
            More Information
            {/* Accordion arrow icon */}
            <svg class="w-5 h-5 transition-transform duration-300" data-icon data-target="accordion-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="accordion-1" class="grid grid-cols-1 md:grid-cols-2 gap-6 pb-6 hidden" role="region" aria-labelledby="accordion-1">
            <div class="text-lg max-w-none" set:html={menuHTML}></div>
          </div>
        </div>
      </section>
    )
    : null
  }

  {/* Accordion toggle script */}
  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.toggle-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const targetId = btn.dataset.target;
          const panel = document.getElementById(targetId);
          const icon = document.querySelector(`svg[data-icon][data-target="${targetId}"]`);
          const expanded = btn.getAttribute('aria-expanded') === 'true';
          btn.setAttribute('aria-expanded', String(!expanded));
          panel.classList.toggle('hidden');
          icon.classList.toggle('rotate-180');
        });
      });
    });
  </script>
</Layout>
